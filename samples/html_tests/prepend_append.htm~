<!DOCTYPE html>
<html>
    <head>
        <META http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <script type="text/lua">
local count=1
local say = function(t)
    count = count + 1
    return string.format('<%s>文本%d</%s>',t,count,t)
end

$"#btn1".attribute.onClick = function()
    local old = $"#outer":state('~checked?') == 0 -- 取反之前值
    $("h2"):prepend(say('b'), old)
end

$"#btn2".attribute.onClick = function()
    local old = $"#outer":state('~checked?') == 0 -- 取反之前值
    $("h2"):append(say('i'), old);
end
$"#outer":state('disabled')
        </script>
    </head>
    <body>
        <h2>"这是标题: 前后插入元素"</h2>
        <button id="btn1">前插入文本</button>
        <button id="btn2">后添加文本</button>
        <INPUT type="checkbox" id="outer">自动切换元素内外</input>
        <pre>
            $(selector):append(content)         向被选元素的（内部）HTML 追加内容
            $(selector):append(content,true)    在被选元素之后添加 HTML
            $(selector):prepend(content)        向被选元素的（内部）HTML “预置”（Prepend）内容
            $(selector):prepend(content,true)   在被选元素之前添加 HTML
        </pre>
    </body>
</html>
